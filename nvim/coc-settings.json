{
  "coc.preferences.formatOnSaveFiletypes": [
    "solidity",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "markdown",
    "json"
  ],
  "languageserver": {
    "cairo": {
      "module": "~/code/lsp/node_modules/cairo-ls/out/server.js",
      "args": ["--node-ipc"],
      "filetypes": ["cairo"],
      "rootPatterns": [".git/"]
    },
    "graphql": {
      "command": "graphql-lsp",
      "args": ["server", "-m", "stream"],
      "filetypes": ["typescript", "typescriptreact", "graphql"]
    }
  }
}
