{
  "coc.preferences.formatOnSaveFiletypes": [
    "rust",
    "solidity",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "html",
    "css",
    "markdown",
    "json"
  ],
  "languageserver": {
    "rust": {
      "command": "rust-analyzer",
      "filetypes": ["rust"],
      "rootPatterns": ["Cargo.toml"]
    },
    "cairo": {
      "module": "~/packages/cairo-lsp/node_modules/cairo-ls/out/server.js",
      "args": ["--node-ipc"],
      "filetypes": ["cairo"],
      "rootPatterns": [".git/"]
    }
  }
}
